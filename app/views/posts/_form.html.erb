<%= form_for [topic, post] do |f| %>
  <% if post.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(post.errors.count, "error") %>.</h4>
      <ul>
        <% post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= simple_form_for [topic, Post.new] do |f| %>
    <%= f.input :title %>
    <%= f.input :body %>
    <%= f.button :submit %>
  <% end %>
<% end %>