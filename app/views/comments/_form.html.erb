<%= form_for [post, post.comments.new] do |f| %>

  <%= form_group_tag(post.errors[:body]) do %>
    <%= f.label :comment %>
    <%= f.text_area :body, rose: 8, class: 'form-control', placeholder: "Enter Comment" %>
  <% end %>

  <div class="form-group">
    <%= f.submit "Add New Comment", class: 'btn btn-success' %>
  </div>
<% end %>